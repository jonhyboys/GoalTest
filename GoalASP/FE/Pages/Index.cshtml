@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="page-container">
    <div id="btn-addProduct" class="btn">A&ntilde;adir producto</div>
    <div id="btn-loadProducts" class="btn">Cargar lista</div>
    <div id="form-container" class="hide">
        <div class="form-group">
            <label>Tipo:</label>
            <input type="text" id="txt-type" />
        </div>
        <div class="form-group">
            <label>Nombre:</label>
            <input type="text" id="txt-name" />
        </div>
        <div class="form-group">
            <label>Expiraci&oacute;n:</label>
            <input type="text" id="txt-expiration" />
        </div>
        <div class="form-group">
            <div id="btn-saveProduct" class="btn">Guardar</div>
            <div id="btn-cancelProduct" class="btn">Cancelar</div>
        </div>
    </div>
    <div id="blankstate" class="hide">No hay producto</div>
    <div id="error-container" class="hide">
        <div id="error-close">x</div>
        <p id="error-message"></p>
    </div>
    <table id="tbl-products" class="hide">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Nombre</th>
                <th>Expiraci&oacute;n</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
